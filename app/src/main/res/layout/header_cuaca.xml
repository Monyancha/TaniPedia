<LinearLayout
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:animateLayoutChanges="true"
    android:background="@color/primary"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="48dp"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="Rata-rata 24 oct 2015 - 10 nov 2015"
        android:textColor="#FFF"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_cuaca"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/berawan"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tekanan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tekanan"/>

                <TextView
                    android:id="@+id/tekanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="1006.47 hpa"
                    android:textColor="#FFF"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_kelembaban"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kelembaban"/>

                <TextView
                    android:id="@+id/kelembaban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="90 %"
                    android:textColor="#FFF"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FFF"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/cuaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Hujan"
                android:textColor="#FFF"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/suhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26.56&#x2103;"
                android:textColor="#FFF"
                android:textSize="48sp"/>

            <TextView
                android:id="@+id/minmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min : 23&#x2103; Max : 32&#x2103;"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/arah_angin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Selatan"
                android:textColor="#FFF"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/kecepatan_angin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecepatan Angin : 3.56 m/s"
                android:textColor="#FFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>